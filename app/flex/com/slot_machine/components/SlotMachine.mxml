<?xml version="1.0" encoding="utf-8"?>
<s:HGroup
  xmlns:fx="http://ns.adobe.com/mxml/2009"
  xmlns:s="library://ns.adobe.com/flex/spark"
  xmlns:mx="library://ns.adobe.com/flex/mx"
  width="100%"
  height="100%">
  
  <fx:Script>
    <![CDATA[
      import spark.components.Image;
      
      public const ICONS_PATH:String = "/assets/icons/";
      
      public function loadImages():void {
        var images:Array = [
          "ubuntu.png",
          "gnome.png",
          "ipod.png"
        ];
        
        var newImage:Image;
        var i:int;
        
        for (i=0; i<=2; i++) {
          newImage = new Image();
          newImage.source = ICONS_PATH + images[i];
          reel.addElement(newImage);
        }
      }
    ]]>
  </fx:Script>

  <s:VGroup id="reel" height="100%" width="128" initialize="loadImages();"/>
  
</s:HGroup>